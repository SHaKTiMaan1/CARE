                          <% }else{ %>
                          <a class="btn btn-danger " href="/cwc/dashboard/editChildDetails/<%= employee.employee_id %>/<%=child.child_id%>">UPDATE DATA</a>
                          <% } %>
                        </div>  
                      </div> 
                    </div>

                  </div>        
                </div>
              </div>
            </span>
            <% counter++; %>
            <% }); %>                           
          </div>           
        </div>
      

