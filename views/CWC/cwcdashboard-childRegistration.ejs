<%- include("../partials/headerCwcDashboard")%>


<section id="child-registration-form-parent">
<div class="container-fluid">
  <div class="row justify-content-center crimson">
    <div
      class="p-4 white"
    >
      <div class="card px-0 pt-4 pb-0 mt-3 mb-3 ">
        <h2 id="heading">Register a new child</h2>
        
        <img src="/images/cwc/happykids.png" class="happykids-img" alt="">
        
        <form id="msform">
          <!-- progressbar -->
          <ul id="progressbar">
            <li class="active" id="personal"><strong>Personal</strong></li>
            <li id="account"><strong>Account</strong></li>           
            <li id="payment"><strong>Image</strong></li>
            <li id="confirm"><strong>Finish</strong></li>
          </ul>
          <div class="progress">
            <div
              class="progress-bar progress-bar-striped progress-bar-animated"
              role="progressbar"
              aria-valuemin="0"
              aria-valuemax="100"
            ></div>
          </div>
          <br />
        <!-- fieldsets -->
    <fieldset>
        <div class="form-card">
              <div class="row">

                <div class="col-7">
                  <h2 class="fs-title">Personal Information:</h2>
                </div>
                <div class="col-5">
                  <h2 class="steps">Step 1 - 4</h2>
                </div>

              </div>
                        
            <div class="row position">
                <label for="" class="fields fieldlabels">Name </label>

                    <div class="col-sm-4">                                
                        <input type="text" name="fname" id="fname" class="form-control" placeholder="First Name">
                    </div>
                    <div class="col-sm-4">
                        <input type="text" name="mname" id="mname" class="form-control" placeholder="Middle Name">
                    </div>
                    <div class="col-sm-4">
                        <input type="text" name="lname" id="lname" class="form-control" placeholder="Last Name">
                    </div>

            </div>
            

            <div class="form-group">
                    
                       
                <div class="row position">
                
                    <div class="col-sm-6">
                        <label for="" class="fields">AGE OF CHILD</label>
                        <input type="text" name="age" id="age" class="form-control" placeholder="Age of child">
                    </div>
                    <div class="col-sm-6">
                        <label for="" class="fields">DATE OF BIRTH</label>
                        <input type="date" name="dob" id="dob" class="form-control" placeholder="dd-mm-yyyy">
                    </div>
                   
                </div>

                
            </div> 

            <div class="form-group">
                <label for="" class="fields fieldlabels">AADHAAR NUMBER</label>
                <input type="text" name="adhaarnum" id="adhaarnum" class="form-control" placeholder="Aadhaar Number">
            </div> 

            <div class="form-group">
                <label for="" class="fields fieldlabels">FATHER'S NAME</label>
                <input type="text" name="adhaarnum" id="adhaarnum" class="form-control" placeholder="Father's Name">
            </div> 

            <div class="form-group">
                <label for="" class="fields fieldlabels">MOTHER'S NAME</label>
                <input type="text" name="adhaarnum" id="adhaarnum" class="form-control" placeholder="Mother's Name">
            </div> 

            <div class="form-group">
                <label for="" class="fields">GENDER</label>
                <div class="row position">

                    <div class="col-sm-3">                       
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="gender">
                            <span class="checkmark"></span>
                            Male
                        </label>
                    </div>
                    <div class="col-sm-3">                        
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="gender">
                            <span class="checkmark"></span>
                            Female
                        </label>
                    </div>
                    <div class="col-sm-3">                                                
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="gender">
                            <span class="checkmark"></span>
                            Others
                        </label>
                    </div>
                </div>
             </div>
             
             <div class="form-group">
                <label for="" class="fields">CASTE CATEGORY</label>
                <div class="row position">

                    <div class="col-sm-2">                       
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="caste">
                            <span class="checkmark"></span>
                            GEN
                        </label>
                    </div>
                    <div class="col-sm-2">                        
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="caste">
                            <span class="checkmark"></span>
                            OBC
                        </label>
                    </div>
                    <div class="col-sm-2">                                                
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="caste">
                            <span class="checkmark"></span>
                            SC
                        </label>
                    </div>
                    <div class="col-sm-2">                                                
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="caste">
                            <span class="checkmark"></span>
                            ST
                        </label>
                    </div>
                    <div class="col-sm-2">                                                
                        <label for="" class="radio name fieldlabels">
                            <input type="radio" class="radio-one" name="caste">
                            <span class="checkmark"></span>
                            Other
                        </label>
                    </div>
                </div>
             </div>

             <div class="form-group">
                <label for="" class="fields fieldlabels">  RELIGION</label>
                <input type="text" name="adhaarnum" id="adhaarnum" class="form-control" placeholder="Father's Name">
            </div> 
            <div class="form-group">
                <label for="" class="fields fieldlabels">  NATIONALITY</label>
                <input type="text" name="adhaarnum" id="adhaarnum" class="form-control" placeholder="Father's Name">
            </div> 
       
              
        </div>

            <input
              type="button"
              name="next"
              class="next action-button"
              value="Next"
            />

    </fieldset>
    <fieldset>

        <div class="form-card">
              <div class="row">
                <div class="col-7">
                  <h2 class="fs-title">Personal Information:</h2>
                </div>
                <div class="col-5">
                  <h2 class="steps">Step 2 - 4</h2>
                </div>
              </div>
              <label class="fieldlabels">First Name: *</label>
              <input type="text" name="fname" placeholder="First Name" />
              <label class="fieldlabels">Last Name: *</label>
              <input type="text" name="lname" placeholder="Last Name" />
              <label class="fieldlabels">Contact No.: *</label>
              <input type="text" name="phno" placeholder="Contact No." />
              <label class="fieldlabels">Alternate Contact No.: *</label>
              <input
                type="text"
                name="phno_2"
                placeholder="Alternate Contact No."
              />
            </div>

            <input
              type="button"
              name="next"
              class="next action-button"
              value="Next"
            />
            <input
              type="button"
              name="previous"
              class="previous action-button-previous"
              value="Previous"
            />
          </fieldset>
          
          <fieldset>
            <div class="form-card">
              <div class="row">
                <div class="col-7">
                  <h2 class="fs-title">Image Upload:</h2>
                </div>
                <div class="col-5">
                  <h2 class="steps">Step 3 - 4</h2>
                </div>
              </div>
              <label class="fieldlabels">Upload Your Photo:</label>
              <input type="file" name="pic" accept="image/*" />
              <label class="fieldlabels">Upload Signature Photo:</label>
              <input type="file" name="pic" accept="image/*" />
            </div>
            <input
              type="button"
              name="next"
              class="next action-button"
              value="Submit"
            />
            <input
              type="button"
              name="previous"
              class="previous action-button-previous"
              value="Previous"
            />
          </fieldset>
          <fieldset>
            <div class="form-card">
              <div class="row">
                <div class="col-7">
                  <h2 class="fs-title">Finish:</h2>
                </div>
                <div class="col-5">
                  <h2 class="steps">Step 4 - 4</h2>
                </div>
              </div>
              <br /><br />
              <h2 class="purple-text text-center">
                <strong>SUCCESS !</strong>
              </h2>
              <br />
              <div class="row justify-content-center">
                <div class="col-3">
                  <img
                    src="https://i.imgur.com/GwStPmg.png"
                    class="fit-image"
                  />
                </div>
              </div>
              <br /><br />
              <div class="row justify-content-center">
                <div class="col-7 text-center">
                  <h5 class="purple-text text-center">
                    You Have Successfully Signed Up
                  </h5>
                </div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
</section>


<script src="/scripts/CWC/multi-step-form.js"> </script>

</body>

</html>




