<%- include("../partials/headerCwcDashboard")%>

<section id="content-area">
        
    <!--heading-->
    <div class="child-view-starting">
       <a class="child-view-back" href="#"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
       <a class="op" href=""><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
       <a class="op" href="#"><i class="fa fa-trash" aria-hidden="true"></i></a>
