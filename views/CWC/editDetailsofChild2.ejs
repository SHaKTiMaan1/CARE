    <!--details-->
    <div class="container">
       <form method="POST" action="/cwc/dashboard/editChildDetails/<%=employee.employee_id%>/<%=child.child_id%>">
            <div class="personalinfo child-view">
                <!--image-->
                <div class="image">
                    <img src="/images/icons/usericon.svg" alt="">                  
                </div>
                <h5 for="">ID : <%= child.child_id.toUpperCase() %></h5>
                   
                <hr>
                <div class="form-group">
                    <label for="" class="fields">FIRST NAME</label>   <br>
                    <input  name="firstName" for=""  value="<%= child.firstName.toUpperCase() %>">
                    
                </div> 
                <div class="form-group">                               
                    <div class="row position">
                        <div class="col-sm-6">
                            <label for="" class="fields">DATE OF BIRTH</label> <br>
                            <input name="dateOfBirth" for=""  value="<%= child.dateOfBirth %>">
                        </div>
                        <div class="col-sm-6">
                            <label for="" class="fields">AGE</label> <br>
                            <input name="age" for="" value="<%= child.age %>" >
                        </div>                             
                    </div>                   
                </div>

                

                <div class="form-group">                               
                    <div class="row position">
                        <div class="col-sm-6">
                            <label for="" class="fields">GENDER</label> <br>
                            <input name="gender" for="" value="<%= child.gender.toUpperCase() %>" >
                            
                        </div>
                        <div class="col-sm-6">
                            <label for="" class="fields">CASTE</label> <br>
                            <input name="caste" for="" value="<%= child.caste %>" >
                        </div>                             
                    </div>                   
                </div>

                

                <div class="form-group">
                    <label for="" class="fields">AADHAAR NUMBER</label> <br>
                    <input name="aadharNumber" for="" value="" >
                </div> 

                
                <div class="form-group">                               
                    <div class="row position">
                        <div class="col-sm-6">
                            <label for="" class="fields">FATHER'S NAME</label> <br>
                            <input name="fatherName" for="" value="<%= child.fatherName.toUpperCase() %>" >
                           
                        </div>
                        <div class="col-sm-6">
                            <label for="" class="fields">MOTHER'S NAME</label> <br>
                            <input name="motherName" for="" value="<%= child.motherName.toUpperCase() %>" >
                          
                        </div>                             
                    </div>                   
                </div>


                <hr>
                <div class="form-group">
                    <div class="row position">        
                        <div class="col-sm-4">
                            <label for="" class="fields">BLOOD GROUP</label> <br>
                            <label for="" class="values view-child-details-data">A(+ve)</label>
                        </div>
                        <div class="col-sm-4">
                            <label for="" class="fields">HIEGHT</label><br>
                             <label for="" class="values view-child-details-data">4 feet</label>  
                        </div>
                        <div class="col-sm-4">
                            
                            <label for="" class="fields">WEIGHT</label> <br>
                            <label for="" class="values view-child-details-data">35 kgs</label>
                        </div>
                    </div>
                    
                </div> 
                
                

