                 <div class="form-group">
                    <label for="" class="fields">PHYSICALLY CHALLENGED</label><br>
                    <label for="" class="values view-child-details-data">No</label>
                </div> 
                <div class="form-group">
                    <label for="" class="fields">MENTAL ILLNESS</label><br>
                    <label for="" class="values view-child-details-data">No</label>
                </div> 
                
            
            
                <p class="infoheading">Official Information</p>
                <hr>
               
                <div class="form-group">
                    <label for="" class="fields">ASSIGNED CCI NAME</label> <br>
                    <input name="cci_name" for="" value="<%= child.cci_name %>" >
                    
                </div> 
                <div class="form-group">
                    <label for="" class="fields">REGISTRATION DATE AND TIME</label> <br>
                    <label for="" class="values view-child-details-data"><%= child.registrationDate %></label>
                </div>
               
                <div class="form-group">
                    <label for="" class="fields">WITNESS</label> <br>
                    <label for="" class="values view-child-details-data"><%= child.witness_name + " , " +child.witness_id%></label>
                </div> 
            
            
               <button type="submit" class="btn btn-primary" >Update</button>
           
       </form>
    </div> 
    
