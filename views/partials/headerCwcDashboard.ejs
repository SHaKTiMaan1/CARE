  <body>
    <section id="sideMenu">
      <nav id="sidemenu-flexbox">
        <a
          class="active " 
          data-toggle="popover" title="CWC Dashboard" data-content="Here are the brief details of the district."
          href="/cwc/dashboard/<%= employee.employee_id %>"
          
          ><i class=" fa fa-home"  aria-hidden="true"></i
        ></a>

        <a
          class="active"
          href="/cwc/dashboard/allChildren/<%= employee.employee_id %>"
          data-toggle="popover" title="Children Under Care" data-content="Details of all children in the district. You can view and edit the details of each child. "

          ><i class="fa fa-child" aria-hidden="true"></i>
        </a>

        <a
          class="active"
          href="/cwc/dashboard/childRegistration/<%= employee.employee_id %>"
          
          data-toggle="popover" title="New Child Registration" data-content="Registration form for New Child."
          ><i class="fa fa-user-plus" aria-hidden="true"></i>
        </a>

        <a
          class="active"
          href="/cwc/dashboard/cciDetails/<%= employee.employee_id %>"
          data-toggle="popover" title="Child Care Institutions under supervision" data-content="Details of all Child Care Institutions in the district">
          
          <i class="fa fa-building" aria-hidden="true"></i
        ></a>

        <a class="active" href="indexccireg.html" title="Help"
          ><i class="fa fa-question" aria-hidden="true"></i
        ></a>

        <a class="active" href="/loginOptions" title="Log Out"
          ><i class="fa fa-sign-out-alt" aria-hidden="true"></i>
        </a>
      </nav>
    </section>

    <div class="home-nav-container">
      <nav class="dashboard-nav navbar fixed-top navbar-light">
        <div class="container">
          <a class="" href="#">CARE</a>

          <div id="dashboard-icons-container">
            <h6 class="dashoard-nav-icon">
              <%= employee.firstName.toUpperCase() + " " + employee.lastName.toUpperCase() %>
            </h6>
            <div class="dropdown show ">
              <a  href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="dashoard-nav-icon fa fa-envelope"></i>
              </a>
            
              <div class="dropdown-menu dashboard-home-message-dropdown" aria-labelledby="dropdownMenuLink">
                <%cci_list.forEach(function(eachCci){%>
                  <a  data-toggle="popover" title="Send the " data-content="Registration form for New Child." class="dropdown-item message-list" href="/message/<%=employee.employee_id%>/<%=eachCci.cci_id%>"><%=eachCci.cci_name.toUpperCase()%></a>
                  <%})%>
                
                </div>
            </div>
            <a href="" title="Profile">
              <i class="dashoard-nav-icon fa fa-user"></i>
            </a>
            <span id="group"> 
              <a href="" title="Notifications"
              ><i class="dashoard-nav-icon fa fa-bell"></i>
            </a> 
              <span class="badge badge-light">5</span> 
            </span> 
           
            
          </div>
        </div>
      </nav>
      <nav class="dashboard-nav-second navbar fixed-top navbar-light">
        <div class="container">
          <a class="dashboard-nav-brand navbar-brand" href="#"> CARE</a>
        </div>
      </nav>
    </div>
  </div>


