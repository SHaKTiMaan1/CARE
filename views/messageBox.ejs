    <div class="mr-4 ml-4">
      <div class="container">
        <div class="jumbotron mt-5" style="background-color:#0275d8">
          <%console.log(conversation)%>
          <h1 class="text-center">Conversation</h1>
          <%if(conversation.length!=0)%>
          <%const employee_id = employee.employee_id%>
          <%{%>
                <%conversation.forEach(function(eachMessage){ %>
          <%  console.log(((eachMessage.sender).toUpperCase())+":"+eachMessage.message)%>
          <%const sender = eachMessage.sender%>
          <br />
          <%if(sender.localeCompare("cwc")==0){%>
          
            <h6 class="text-white"><%=(eachMessage.sender).toUpperCase()%>
              (<%=employee_id%>) <h4 class="text-white"><%=eachMessage.message%></h4>
            </h6>

            <%}%>
                  <%if(sender.localeCompare("cci")==0){%>

            <h6 class="text-body"><%=(eachMessage.sender).toUpperCase()%> <h4 class="text-body"><%=eachMessage.message%>
              </h4>
            </h6>

            <%}%>
                
              
                  
                  <%})%>
            <%}%>
              <br />
              <br />
              <br />
              <div class="md-1">
                <form  method="POST" action="/message/<%=employee_id%>/<%=cci.cci_id%>">
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Send Message to <%=cci.cci_name%></label>
              <textarea class="form-control" id="exampleFormControlTextarea1" name="message" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-success my-2">Send</button>
            </form>
          </div>

        </div>
      </div>
    </div>



