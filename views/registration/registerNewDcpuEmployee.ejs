<%- include("../partials/headerAdminDashboard")%>

<section class="inline-flex" id="content-area">
  
  <div class="container pos">
    <div class="heading">
      <p class="name">New DCPU Employee Registration Portal</p>
    </div>
  <!--image-->
  <div class="image">
      <img src="/images/groupemployee.jpg" alt="">
  </div> 
    <form 
      action="/admin/registerNewDcpuEmployee/<%= admin.employee_id %>"
      method="post"
    >
      <div class="personalinfo">
        <p class="infoheading">DCPU Employee Registration</p>
        <hr />
        <div class="form-group">
          <label for="" class="fields">Name</label>

          <div class="row position">
            <div class="col-sm-4">
              <input
                type="text"
                name="firstName"
                id="fname"
                class="form-control"
                placeholder="First Name"
              />
            </div>
            <div class="col-sm-4">
              <input
                type="text"
                name="middleName"
                id="mname"
                class="form-control"
                placeholder="Middle Name"
              />
            </div>
            <div class="col-sm-4">
              <input
                type="text"
                name="lname"
                id="lastName"
                class="form-control"
                placeholder="Last Name"
              />
            </div>
          </div>
        </div>
        <div class="form-group">
          
              <label for="" class="fields">DATE OF BIRTH</label>
              <input
                type="date"
                name="dateOfBirth"
                id="dob"
                class="form-control"
                placeholder="dd-mm-yyyy"
              />
          
        </div>

        <div class="form-group">
          <label class="fields">GENDER</label>
          <select class="form-control" name="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label for="" class="fields">AADHAAR NUMBER</label>
          <input
            type="text"
            name="aadhaarNumber"
            id="adhaarnum"
            class="form-control"
            placeholder="Aadhaar Number"
          />
        </div>

        <div class="form-group">
          <label for="" class="fields">CONTACT NUMBER</label>
          <input
            type="text"
            name="contactNumber"
            id="adhaarnum"
            class="form-control"
            placeholder="Contact Number"
          />
        </div>

        <div class="form-group">
          <label for="" class="fields">email ID</label>
          <input
            type="text"
            name="email"
            id="adhaarnum"
            class="form-control"
            placeholder="abc@you.com"
          />
        </div>

        <div class="form-group">
          <label for="" class="fields">Password</label>

          <div class="row position">
            <div class="col-sm-6">
              <input
                type="password"
                name="password"
                id="fname"
                class="form-control"
                placeholder="Password"
              />
            </div>
            <div class="col-sm-6">
              <input
                type="password"
                name="confirmPassword"
                id="mname"
                class="form-control"
                placeholder="Confirm Password"
              />
            </div>
          </div>
        </div>

        <label>State</label>
        <select class="form-control" name="state">
          <option value="">--- Select State ---</option>
          <option value="Uttar Pradesh">Uttar Pradesh</option>
        </select>

        <div class="form-group">
          <label>District</label>
          <select class="form-control" name="district">
            <option value="">--- Select District ---</option>
            <option value="jhansi">Jhansi</option>
            <option value="Noida">Noida</option>
            <option value="bhopal">Bhopal</option>
            <option value="gaya">Gaya</option>
          </select>
        </div>

        
        <div class="positioning-button">
          <div class="row">
            <div class="col-md-6">
             <button class="btn btn-danger">Reset</button>
             
            </div>
            <div class="col-md-6">
             
             <input type="submit" class="btn btn-primary" />
            </div>
          </div>
         </div>
      </div>
    </form>
  </div>
</section>
